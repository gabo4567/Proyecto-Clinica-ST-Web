@page
@model Clinica_Salud_Total.Pages.Turnos.EditarModel
@{
    ViewData["Title"] = "Editar Turno";
}

<h1>Editar Turno</h1>

<form method="POST">
    <input type="hidden" asp-for="Turno.IdTurno" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Turno.Comprobante" class="form-label"></label>
        <input asp-for="Turno.Comprobante" class="form-control" />
        <span asp-validation-for="Turno.Comprobante" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Turno.IdPaciente" class="form-label"></label>
        <input asp-for="Turno.IdPaciente" class="form-control" type="number" />
        <span asp-validation-for="Turno.IdPaciente" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Turno.IdProfesional" class="form-label"></label>
        <input asp-for="Turno.IdProfesional" class="form-control" type="number" />
        <span asp-validation-for="Turno.IdProfesional" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Turno.IdTutor" class="form-label"></label>
        <input asp-for="Turno.IdTutor" class="form-control" type="number" />
        <span asp-validation-for="Turno.IdTutor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Turno.FechaHora" class="form-label"></label>
        <input asp-for="Turno.FechaHora" class="form-control" type="datetime-local" />
        <span asp-validation-for="Turno.FechaHora" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Turno.Duracion" class="form-label"></label>
        <input asp-for="Turno.Duracion" class="form-control" type="number" />
        <span asp-validation-for="Turno.Duracion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Turno.IdEstado" class="form-label"></label>
        <select asp-for="Turno.IdEstado" class="form-select">
            <option value="">-- Seleccione un estado --</option>
            @foreach (var estado in Model.Estados)
            {
                <option value="@estado.IdEstado">@estado.Nombre</option>
            }
        </select>
        <span asp-validation-for="Turno.IdEstado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Turno.Observaciones" class="form-label"></label>
        <input asp-for="Turno.Observaciones" class="form-control" />
        <span asp-validation-for="Turno.Observaciones" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Turno.FechaCreacion" class="form-label"></label>
        <input asp-for="Turno.FechaCreacion" class="form-control" type="datetime-local" readonly />
        <span asp-validation-for="Turno.FechaCreacion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
